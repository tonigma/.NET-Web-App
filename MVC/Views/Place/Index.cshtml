@model IEnumerable<MVC.Models.PlaceViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form asp-controller="Place" asp-action="Index">
    <p>
        Name: <input type="text" name="name">
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Placename)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.averageAge)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EntryTax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.distance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoadToPlace)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlaceArrival)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegionName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Placename)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.averageAge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EntryTax)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.distance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoadToPlace)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlaceArrival)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegionName)
        </td>  
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
